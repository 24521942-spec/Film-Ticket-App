<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A">

    <ImageView
        android:id="@+id/imgStatusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/status_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/imgStatusBar">

        <TextView
            android:id="@+id/txtMovieName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Batman"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCinemaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eurasia Cinema7"
            android:textColor="#94A3B8"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_seat_selector"
                android:paddingHorizontal="14dp"
                android:paddingVertical="8dp"
                android:text="April, 14"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_seat_selector"
                android:paddingHorizontal="14dp"
                android:paddingVertical="8dp"
                android:text="15:10"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/legendLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <View android:layout_width="12dp" android:layout_height="12dp"
            android:background="#253554" android:layout_marginEnd="4dp"/>
        <TextView android:text="Available" android:textColor="#94A3B8"
            android:textSize="12sp" android:layout_marginEnd="16dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <View android:layout_width="12dp" android:layout_height="12dp"
            android:background="#546E7A" android:layout_marginEnd="4dp"/>
        <TextView android:text="Occupied" android:textColor="#94A3B8"
            android:textSize="12sp" android:layout_marginEnd="16dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <View android:layout_width="12dp" android:layout_height="12dp"
            android:background="#FC6D19" android:layout_marginEnd="4dp"/>
        <TextView android:text="Chosen" android:textColor="#94A3B8"
            android:textSize="12sp" android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:id="@+id/screenLine"
        android:layout_width="280dp"
        android:layout_height="3dp"
        android:layout_marginTop="16dp"
        android:background="#3E5074"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/legendLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCREEN"
        android:textColor="#3E5074"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/screenLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSeats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintTop_toBottomOf="@id/screenLine"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBuy"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#FC6D19"
            android:text="Pay for tickets • 3200 ₸"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="16dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>