<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- ✅ TOP BAR: chỉ có nút back -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingHorizontal="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_back_arrow"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="4dp"
                    tools:ignore="ContentDescription"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ✅ TITLE: kéo xuống dưới top bar -->
            <TextView
                android:id="@+id/txtMovieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="The Batman"
                android:textColor="@color/text_main"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/topBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/txtMovieTitle">

                <LinearLayout
                    android:id="@+id/tabAboutContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tabAbout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:textColor="@color/primary_main"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/lineAbout"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/primary_main" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabSessionsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tabSessions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sessions"
                        android:textColor="@color/text_muted"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/lineSessions"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/primary_main"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/surface_deep"
                app:layout_constraintTop_toBottomOf="@id/tabLayout" />

            <!-- ABOUT: hiện mặc định -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider">

                <FrameLayout
                    android:id="@+id/layoutTrailer"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imgBackdrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.7"
                        android:scaleType="centerCrop"
                        android:src="@color/surface_deep" />

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_play_button"
                        tools:ignore="ContentDescription" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/ratingSection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:background="@color/surface_deep"
                    android:paddingVertical="14dp"
                    app:layout_constraintTop_toBottomOf="@id/layoutTrailer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- IMDb -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtImdb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8.3"
                            android:textColor="@color/text_main"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="IMDb"
                            android:textColor="@color/text_muted"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:alpha="0.25"
                        android:background="@color/text_muted" />

                    <!-- Kinopoisk -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtKino"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7.9"
                            android:textColor="@color/text_main"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text=""
                            android:textColor="@color/text_muted"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtPlot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="16dp"
                    android:lineSpacingExtra="4dp"
                    android:text="Plot"
                    android:textColor="@color/text_main"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/ratingSection" />

                <LinearLayout
                    android:id="@+id/infoSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    app:layout_constraintTop_toBottomOf="@id/txtPlot">

                    <include
                        android:id="@+id/infoCert"
                        layout="@layout/item_info_row" />

                    <include
                        android:id="@+id/infoRuntime"
                        layout="@layout/item_info_row" />

                    <include
                        android:id="@+id/infoRelease"
                        layout="@layout/item_info_row" />

                    <include
                        android:id="@+id/infoGenre"
                        layout="@layout/item_info_row" />

                    <include
                        android:id="@+id/infoDirector"
                        layout="@layout/item_info_row" />

                    <include
                        android:id="@+id/infoCast"
                        layout="@layout/item_info_row" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSelectSession"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/bg_session_button"
                    android:text="Select Session"
                    android:textAllCaps="false"
                    android:textColor="@color/text_on_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/infoSection" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- SESSIONS: ẩn mặc định -->
            <LinearLayout
                android:id="@+id/containerSessions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/layoutFilterRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtSelectedDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="April, 18"
                        android:textStyle="bold"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtSortTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Time ↑"
                        android:textColor="@color/text_main"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="end|center_vertical">

                        <TextView
                            android:id="@+id/txtSortCinema"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="By cinema"
                            android:textColor="@color/text_muted"
                            android:textSize="14sp"
                            android:layout_marginEnd="8dp" />

                        <Switch
                            android:id="@+id/switchSort"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutPriceHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp"
                    android:background="@color/surface_deep">

                    <TextView
                        android:id="@+id/headerTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="Time"
                        android:textColor="@color/text_main"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/headerRoom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="Room"
                        android:textColor="@color/text_main"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="start" />

                    <TextView
                        android:id="@+id/headerCinema"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.6"
                        android:text="Cinema"
                        android:textColor="@color/text_main"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="start" />

                    <TextView
                        android:id="@+id/headerPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text="Price"
                        android:textColor="@color/text_main"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="end" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSessionsByTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginBottom="16dp"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_session_by_time_row" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
