<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="10dp"
    android:paddingHorizontal="16dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:gravity="start">

        <TextView
            android:id="@+id/txtSessionTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_main"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:text="14:40" />

        <TextView
            android:id="@+id/txtFormat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_main"
            android:textSize="10sp"
            android:textStyle="bold"
            tools:text="IMAX" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCinemaName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textColor="@color/text_main"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingStart="4dp"
            tools:text="Eurasia Cinema 7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtPriceAdult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:gravity="center"
                android:textColor="@color/text_main"
                android:textSize="14sp"
                tools:text="2200" />

            <TextView
                android:id="@+id/txtPriceChild"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:gravity="center"
                android:textColor="@color/text_main"
                android:textSize="14sp"
                tools:text="1000" />

            <TextView
                android:id="@+id/txtPriceStudent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:gravity="center"
                android:textColor="@color/text_main"
                android:textSize="14sp"
                tools:text="1500" />

            <TextView
                android:id="@+id/txtPriceVIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/text_main"
                android:textSize="14sp"
                tools:text="•" />

            <TextView
                android:id="@+id/txtLanguage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="end"
                android:textColor="@color/text_muted"
                android:textSize="11sp"
                tools:text="Рус" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>