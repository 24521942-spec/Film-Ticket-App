<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F172A"
    android:padding="20dp">

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Ticket"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_seat_selector"
        android:backgroundTint="#FFFFFF"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/txtStatus">

        <TextView android:id="@+id/txtFinalMovie" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#0F172A" android:textSize="20sp" android:textStyle="bold" />
        <TextView android:id="@+id/txtFinalCinema" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#64748B" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:src="@android:drawable/ic_menu_gallery" />

        <TextView android:id="@+id/txtFinalSeats" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#0F172A" android:textStyle="bold" />
        <TextView android:id="@+id/txtFinalTotal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#10B981" android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btnHome"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Back to Home"
        android:backgroundTint="#FC6D19"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>