<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <gradient
                android:startColor="#FF8036"
                android:endColor="#FC6D19"
                android:angle="270"/> <stroke android:width="0dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <solid android:color="#546E7A"/> </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <solid android:color="#253554"/> <stroke android:width="1dp" android:color="#3E5074"/>
        </shape>
    </item>
</selector>