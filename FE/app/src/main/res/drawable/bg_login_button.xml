<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#3949AB"/>
            <corners android:radius="16dp"/>
            <padding
                android:left="16dp"
                android:top="10dp"
                android:right="16dp"
                android:bottom="10dp"/>
        </shape>
    </item>

    <!-- Normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#536DFE"/>
            <corners android:radius="16dp"/>
            <padding
                android:left="16dp"
                android:top="10dp"
                android:right="16dp"
                android:bottom="10dp"/>
        </shape>
    </item>

</selector>
