<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:usesCleartextTraffic="true"
    package="com.example.ticketbookingapp">
    <uses-permission android:name="android.permission.INTERNET" />




    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TicketBookingApp">

        <activity
            android:name=".screens.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".screens.LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".screens.RegisterActivity"
            android:exported="false" />

        <activity
            android:name=".screens.HomeActivity"
            android:exported="false" />

        <activity
            android:name=".screens.MovieDetailActivity"
            android:exported="false" />

        <activity
            android:name=".screens.SeatSelectionActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".screens.MainActivity"
            android:exported="false" />

    </application>

</manifest>